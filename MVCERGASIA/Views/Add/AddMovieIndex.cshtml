@model MVCERGASIA.Models.AddMovieViewModel

@if (ViewBag.flag == true)
{
    <script>
        alert('@ViewBag.AlertMessage');
    </script>
}

<h1 class="mb-3">Add Movie</h1>

<div>
    <form method="post" action="AddMovie">
        <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="ex. Bohemian Rhapsody" asp-for="Moviename">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Content</label>
            <input type="text" class="form-control" placeholder="ex. Famous rock band's 'Queen' story." asp-for="Moviecontent">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Length (mins)</label>
            <input type="text" class="form-control" placeholder="ex. 134" asp-for="Movielength">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Type</label>
            <input type="text" class="form-control" placeholder="ex. Documentary" asp-for="Movietype">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Summary</label>
            <input type="text" class="form-control" placeholder="ex. The story of the legendary British rock band Queen and lead singer Freddie Mercury, leading up to their famous performance at Live Aid (1985)." asp-for="Moviesummary">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Director</label>
            <input type="text" class="form-control" placeholder="ex. Bryan Singer" asp-for="Moviedirector">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Assign screening time</label>
            <input type="text" class="form-control" placeholder="YYYY-MM-DD HH:MM:SS" asp-for="MovieTime">
        </div>

        @using (Html.BeginForm())
        {
            <p>Assign Cinema:</p>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <select id="custom-select" class="inputGroupSelect02" asp-for="MovieCinemaId">
                        @foreach (Cinemas cinemas in ViewBag.cinema)
                        {
                            <option value="@cinemas.cinemaid">@cinemas.cinemaname</option>
                        }
                    </select>

                </div>
            </div>

            <input type="hidden" class="form-control" value="@ViewBag.ContentAdmins" asp-for="MovieContentAdminId">

            <button type="submit" class="btn btn-primary">Submit</button>
        }

    </form>
</div>