@model MVCERGASIA.Models.DeleteContentAndCustomerViewModel

<h1 class="mb-3">Customer</h1>

<div>
    <form method="post" action="ViewCustomerIndex">
        <div class="mb-3">
            <label for="" class="form-label">Id</label>
            <input type="text" readonly class="form-control" asp-for="Did">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Email</label>
            <input type="email" readonly class="form-control" asp-for="Demail">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input type="text" readonly class="form-control" asp-for="Dname">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Role</label>
            <input type="text" readonly class="form-control" asp-for="Drole">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Username</label>
            <input type="text" readonly class="form-control" asp-for="AddDusername">
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Password</label>
            <input type="text" readonly class="form-control" asp-for="Dpassword">
        </div>

        <input type="hidden" class="form-control" value="@ViewBag.adUsername" asp-for="adUsername">

        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Admins">Delete</button>
    </form>
</div>
